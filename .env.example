# üåâ Fusion+ Monad Bridge - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# ‚ö†Ô∏è  NEVER commit your .env file with real keys to version control!
# ============================================================================

# ============================================================================
# üîó BLOCKCHAIN RPC ENDPOINTS
# ============================================================================

# üîµ Ethereum Networks
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Alternative: https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# üü£ Monad Networks
MONAD_RPC_URL=https://testnet-rpc.monad.xyz
MONAD_TESTNET_RPC_URL=https://testnet-rpc.monad.xyz
# Production Monad RPC (when available): https://rpc.monad.xyz

# ============================================================================
# üîê PRIVATE KEYS (‚ö†Ô∏è CRITICAL: NEVER COMMIT REAL KEYS!)
# ============================================================================

# üîµ Ethereum wallet private key (without 0x prefix)
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_here_64_characters

# üü£ Monad wallet private key (can be same as Ethereum)
MONAD_PRIVATE_KEY=your_monad_private_key_here_64_characters

# ü§ñ Relayer service private key (can be same or separate for security)
RELAYER_PRIVATE_KEY=your_relayer_private_key_here_64_characters

# üëõ Your wallet address (derived from private key)
WALLET_ADDRESS=0xYourWalletAddressHere

# ============================================================================
# üîë API KEYS & AUTHENTICATION
# ============================================================================

# üîç Blockchain Explorers
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
MONAD_EXPLORER_API_KEY=YOUR_MONAD_EXPLORER_API_KEY

# üîÑ 1inch Integration
ONE_INCH_API_KEY=YOUR_1INCH_API_KEY
ONE_INCH_BASE_URL=https://api.1inch.io
ONE_INCH_VERSION=v5.0

# üì° Additional RPC Providers (Optional)
ALCHEMY_API_KEY=YOUR_ALCHEMY_API_KEY
INFURA_PROJECT_ID=YOUR_INFURA_PROJECT_ID

# ============================================================================
# üìú DEPLOYED CONTRACT ADDRESSES
# ============================================================================

# üîµ Ethereum Sepolia Contracts
ETHEREUM_HTLC=0xYourEthereumHTLCAddress
ETHEREUM_FUSION_ADAPTER=0xYourFusionAdapterAddress

# üü£ Monad Testnet Contracts  
MONAD_HTLC=0xYourMonadHTLCAddress
MONAD_BRIDGE=0xYourMonadBridgeAddress

# ============================================================================
# ‚öôÔ∏è CONFIGURATION SETTINGS
# ============================================================================

# üèóÔ∏è Application Settings
NODE_ENV=development
LOG_LEVEL=debug
API_PORT=3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ‚õΩ Gas Configuration
ETH_GAS_PRICE=20000000000
ETH_GAS_LIMIT=500000
MONAD_GAS_PRICE=1000000000
MONAD_GAS_LIMIT=500000

# üìä Monitoring Settings
BLOCK_CONFIRMATIONS=3
POLLING_INTERVAL=5000
RETRY_ATTEMPTS=3

# üîí Security Settings
TIMELOCK_DURATION=3600
MIN_TIMELOCK=1800
MAX_TIMELOCK=86400

# ============================================================================
# üöÄ DEPLOYMENT CONFIGURATION
# ============================================================================

# Network selection for deployment
DEPLOY_NETWORK=sepolia
VERIFY_CONTRACTS=true
SAVE_DEPLOYMENTS=true

# ============================================================================
# üì± FRONTEND CONFIGURATION
# ============================================================================

# React app settings (for frontend)
REACT_APP_ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
REACT_APP_MONAD_RPC_URL=https://testnet-rpc.monad.xyz
REACT_APP_ETHEREUM_CHAIN_ID=11155111
REACT_APP_MONAD_CHAIN_ID=10143

# ============================================================================
# üîß DEVELOPMENT & TESTING
# ============================================================================

# Test configuration
TEST_TIMEOUT=30000
TEST_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
TEST_AMOUNT=0.001

# Docker configuration (if using containers)
DOCKER_COMPOSE_FILE=docker-compose.yml
CONTAINER_NAME=fusion-monad-bridge

# ============================================================================
# üìù USAGE EXAMPLES
# ============================================================================

# To use this file:
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values
# 3. Never commit your .env file to git!

# Example private key format (DO NOT USE THIS KEY):
# ETHEREUM_PRIVATE_KEY=ac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Example RPC URL:
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/abcd1234567890

# Example contract address:
# ETHEREUM_HTLC=0x742bDA75bA72c02147b3B1d87Dd30e75B87b7E89
# 1INCH CONFIGURATION
# ============================================================================

ONE_INCH_BASE_URL=https://api.1inch.io
ONE_INCH_VERSION=v5.0

# ============================================================================
# GAS SETTINGS
# ============================================================================

# Ethereum gas settings
ETH_GAS_PRICE=20000000000
ETH_GAS_LIMIT=500000

# Monad gas settings (typically lower)
MONAD_GAS_PRICE=1000000000
MONAD_GAS_LIMIT=500000

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================

# API server port
API_PORT=3000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Event monitoring settings
BLOCK_CONFIRMATIONS=3
POLLING_INTERVAL=5000
RETRY_ATTEMPTS=3

# ============================================================================
# DATABASE CONFIGURATION (Optional)
# ============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/fusion_bridge

# Redis connection string (for caching)
REDIS_URL=redis://localhost:6379

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable gas reporting
REPORT_GAS=true

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug mode
DEBUG=true

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# Set to 'production' in production environment
NODE_ENV=development

# JWT secret for API authentication (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# MONITORING AND ALERTING
# ============================================================================

# Webhook URL for alerts (e.g., Slack, Discord)
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email configuration for alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL_TO=admin@yourproject.com

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Maximum transaction value in ETH
MAX_TRANSACTION_VALUE=10

# Minimum confirmation blocks for high-value transactions
HIGH_VALUE_CONFIRMATIONS=12

# Enable/disable emergency pause
EMERGENCY_PAUSE_ENABLED=true

# ============================================================================
# CHAIN-SPECIFIC SETTINGS
# ============================================================================

# Ethereum Chain ID (1 for mainnet, 11155111 for Sepolia)
ETHEREUM_CHAIN_ID=1

# Monad Chain ID (replace with actual value)
MONAD_CHAIN_ID=12345

# Contract addresses (filled automatically after deployment)
ETHEREUM_HTLC_ADDRESS=
FUSION_ADAPTER_ADDRESS=
MONAD_HTLC_ADDRESS=
MONAD_BRIDGE_ADDRESS=

# ============================================================================
# ADDITIONAL INTEGRATION SETTINGS
# ============================================================================

# Custom RPC endpoints for testing
ETHEREUM_TEST_RPC=http://localhost:8545
MONAD_TEST_RPC=http://localhost:8546

# Frontend build settings
REACT_APP_API_URL=http://localhost:3000
REACT_APP_ETHEREUM_CHAIN_ID=1
REACT_APP_MONAD_CHAIN_ID=12345
