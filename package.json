{
  "name": "fusion-monad-bridge",
  "version": "1.0.0",
  "description": "1inch Fusion+ Cross-Chain Bridge for Ethereum and Monad",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node --project tsconfig.json backend/index.ts",
    "test": "jest",
    "test:contracts": "npx hardhat test",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "deploy:ethereum": "npx hardhat run scripts/deploy.ts --network ethereum",
    "deploy:monad": "npx hardhat run scripts/deploy.ts --network monad",
    "deploy:all": "npm run deploy:ethereum && npm run deploy:monad",
    "setup": "ts-node scripts/setup-integration.ts",
    "relayer": "ts-node backend/relayer/index.ts",
    "api": "ts-node backend/api/index.ts",
    "monitor": "ts-node backend/monitoring/index.ts",
    "format": "prettier --write .",
    "clean": "rm -rf dist deployments/artifacts deployments/cache"
  },
  "keywords": [
    "1inch",
    "fusion",
    "cross-chain",
    "bridge",
    "ethereum",
    "monad",
    "htlc",
    "atomic-swap",
    "defi"
  ],
  "author": "1inch Network",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/babel__core": "^7.20.5",
    "@types/body-parser": "^1.19.6",
    "@types/chai": "^5.2.2",
    "@types/connect": "^3.4.38",
    "@types/cors": "^2.8.17",
    "@types/deep-eql": "^4.0.2",
    "@types/express": "^4.17.21",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/ws": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "hardhat": "^2.19.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.0",
    "typescript": "^5.2.2",
    "web-vitals": "^3.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/1inch/fusion-monad-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/1inch/fusion-monad-bridge/issues"
  },
  "homepage": "https://github.com/1inch/fusion-monad-bridge#readme"
}
